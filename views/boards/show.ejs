<h2 class="no-select">Strips down as much as possible so you can enjoy the pure imagery of the chan denizens.</h2>
<% boards.forEach((board) => { -%>
    <%- include('./board.ejs', { board: board }) -%>
<% }) -%>
<script>
    [].forEach.call(document.querySelectorAll('[data-nsfw]'), function (el) {
        el.addEventListener('click', function(evt) {
            if (window.confirm("This section of the website may contain sexually explicit content or content that is otherwise inappropriate for children and young adults.\nIf you are a minor or it is illegal for you to access mature images and language, do not proceed.\n\nYou must be 18 or older to enter.\n\nDo you agree to continue?")) {
                return true
            }

            evt.preventDefault();
            return false;
        });
    });
</script>
