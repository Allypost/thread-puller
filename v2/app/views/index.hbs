<style>
  main {
    display: grid;
    grid-template-columns: repeat(var(--column-count), minmax(0, 1fr));
    gap: 1em;
    align-items: center;
  }

  article {
    position: relative;
    display: grid;
    padding: 0.5em;
    border-radius: var(--border-radius);
    background-color: #9e9e9e;
    grid-row-gap: 0.3em;
  }

  article h1 {
    margin: 0;
    text-align: center;
    font-size: 1.5em;
  }

  article h1 a {
    font-weight: 700;
    display: inline-block;
    margin: 0;
    text-align: center;
    color: #050505;
  }

  article section {
    position: relative;
    overflow: hidden;
    padding: 0.35em 0.5em;
    text-align: center;
    border-radius: var(--border-radius);
    background-color: rgba(0, 0, 0, .6);
  }

  article.nsfw {
    background-color: #f7c2c1;
  }

  article.nsfw h1 a::before {
    font-size: .69em;
    position: relative;
    bottom: 3px;
    display: inline-block;
    margin-right: 0.5em;
    padding: 0.2em 0.4em;
    content: "NSFW";
    color: #fafafa;
    border-radius: 4px;
    background: #e53935;
    text-shadow: 1px 1px 1px #050505;
  }
</style>

<h1>{{_appName}} - {{_appTagline}}</h1>
<h2>{{_appDescription}}</h2>
<main>
  {{#each boards}}
    <article {{#if this.nsfw }}class="nsfw"{{/if}}>
      <h1>
        <a href="/{{this.board}}/">{{this.link}} - {{this.title}}</a>
      </h1>

      <section>
        {{{this.description}}}
      </section>
    </article>
  {{/each}}
</main>
